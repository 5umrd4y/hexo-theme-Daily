<!-- Footer-widgets -->
<div class="footer-widgets">
  <div class="row inside-wrapper">
    <div class="col-1-3">
      <aside>
        <h1 class="widget-title"><%= config.widget ? config.widget.title : theme.widget.title  %></h1>
        <p align="left"><%= config.widget ? config.widget.content : (theme.widget.content || config.description) %></p>
      </aside>
    </div>
    <div class="col-1-3">
      <aside>
        <h1 class="widget-title">与我联系</h1>
        <div class="widget-text">
          <% if (config.social) { %>
            <% _.forIn(config.social, function(val, key){ %>
              <a href="<%- val %>" class="icon icon-<%- key %>" target="_blank"><%- key %></a>
            <% }) %>
          <% } else { %>
            <% _.forIn(theme.social, function(val, key){ %>
              <a href="<%- val %>" class="icon icon-<%- key %>" target="_blank"><%- key %></a>
            <% }) %>
          <% } %>
        </div>
      </aside>
    </div>
    <div class="col-1-3">
      <aside>
        <h1 class="widget-title">搜索本站</h1>
        <div class="widget-text">
          <form onSubmit="return appDaily.submitSearch('<%- config.search_engines %>')">
            <p>
              <input type="text" placeholder="搜索..." id="homeSearchInput">
            </p>
            <input type="submit" value="搜索">
          </form>
        </div>
      </aside>
    </div>
  </div>
</div>
<!-- Footer -->
<footer class="site-info">
  <span>
    <%- config.title %> © <%= (new Date()).getFullYear() %>
  </span>
</footer>